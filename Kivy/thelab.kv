<GridLayoutExample@GridLayout>:
#rows
#columns
    cols:2
    Button:
        text: "A"
    Button:
        text: "B"
    Button:
        text: "C"
    
    
<AnchorLayoutExample>:
    #rigth, left , center
    #anchor_x: "left" 
    #top, botom
    anchor_y: "top"
    BoxLayout:
        size_hint: .2, .2 
        Button:
            text: "A"
        Button:
            text: "B"
        

    
<BoxLayoutExample>:
    orientation: "vertical"
    Button:
        text: "A"
        #size_hint: None,None
        #size: "40dp","40dp"
        # x,center_x, rigth
        # y, center_y, top
        pos_hint: {"rigth":1}
    BoxLayout:

        Button:
            text: "B1"
        Button:
            text: "B2"
        Button:
            text: "B3"
    Button: 
        text: "C"

<MainWidget>:
    Button:
        text: "Hello"
        size: "100dp","80dp" 
        pos: "100dp", "200dp"
    Label:
        text: "Hello2"
        size: "100dp", "80dp"
        pos: "200dp", "200dp"
        color: 1, 0, 0, 1 
        

